{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        },
        "incremental": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.mdx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
